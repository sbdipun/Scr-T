{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",  // Path to your cron job function
      "schedule": "*/20 * * * *"  // Runs every 20 minutes
    }
  ]
}
